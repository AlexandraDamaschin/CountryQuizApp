<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.countryquizapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--question-->
        <TextView
            android:id="@+id/question_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/q_4"
            android:textAlignment="center"
            android:textSize="@dimen/question_textSize" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/marginTop_radioButtonsGroup"
            android:orientation="vertical">

            <!--answer 1-->
            <RadioButton
                android:id="@+id/q4_ans1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_radioButton"
                android:layout_marginStart="@dimen/margin_radioButton"
                android:onClick="wrongAnswer"
                android:text="@string/q4_ans1"
                android:textAppearance="?android:textAppearanceMedium" />

            <!--answer 2-->
            <RadioButton
                android:id="@+id/q4_ans_correct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_radioButton"
                android:layout_marginStart="@dimen/margin_radioButton"
                android:onClick="goToFifthQuestion"
                android:text="@string/q4_ans_correct"
                android:textAppearance="?android:textAppearanceMedium" />

            <!--answer 3-->
            <RadioButton
                android:id="@+id/q4_ans2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_radioButton"
                android:layout_marginStart="@dimen/margin_radioButton"
                android:onClick="wrongAnswer"
                android:text="@string/q4_ans2"
                android:textAppearance="?android:textAppearanceMedium" />

            <!--answer 4-->
            <RadioButton
                android:id="@+id/q4_ans3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_radioButton"
                android:layout_marginStart="@dimen/margin_radioButton"
                android:onClick="wrongAnswer"
                android:text="@string/q4_ans3"
                android:textAppearance="?android:textAppearanceMedium" />
        </RadioGroup>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/height_image"
            android:layout_marginTop="@dimen/marginTop_image"
            android:src="@drawable/quiz_picture" />

        <!--progress bar 20-->
        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginTop_progressBar"
            android:indeterminate="false"
            android:max="100"
            android:progress="40" />

    </LinearLayout>

</ScrollView>