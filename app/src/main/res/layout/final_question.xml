<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.countryquizapp.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/question_seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/final_question"
                android:textSize="@dimen/question_textSize" />

            <CheckBox
                android:id="@+id/sea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="goToFinalQuestion"
                android:text="@string/sea"
                android:textAppearance="?android:textAppearanceMedium" />

            <CheckBox
                android:id="@+id/mountain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="goToFinalQuestion"
                android:text="@string/mountain"
                android:textAppearance="?android:textAppearanceMedium" />

            <CheckBox
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="goToFinalQuestion"
                android:text="@string/city"
                android:textAppearance="?android:textAppearanceMedium" />


        </LinearLayout>


        <!--image as background-->
        <ImageView
            android:id="@+id/photo_love_travel"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_marginTop="100dp"
            android:scaleType="centerInside"
            android:src="@drawable/quiz_time">

        </ImageView>

        <!--try again-->
        <Button
            android:id="@+id/start_quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="430dp"
            android:text="@string/try_again"
            android:onClick="tryAgain"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:layout_marginTop="480dp"
            android:max="100"
            android:progress="100" />

    </RelativeLayout>
</ScrollView>
